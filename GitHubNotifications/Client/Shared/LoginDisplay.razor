<AuthorizeView>
    <Authorized>
        <img src="@context.User.Claims.FirstOrDefault(c =>c.Type == "urn:github:avatar").Value" style="max-width: 25px;"/>
        <a href="auth/logout">Log out</a>
    </Authorized>
    <NotAuthorized>
        <a href="auth/signin">Log in</a>
    </NotAuthorized>
</AuthorizeView>